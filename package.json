{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aws-tools",
  "title": "AWS Tools",
  "description": "A collection of tools to interact with AWS services.",
  "icon": "AWS.png",
  "author": "harleymckenzie",
  "owner": "akoovatech",
  "categories": [
    "Developer Tools",
    "Productivity",
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "describe-ec2-instances",
      "title": "Describe EC2 Instances",
      "description": "Lists all EC2 instances.",
      "mode": "view",
      "arguments": [
        {
          "name": "profile",
          "type": "text",
          "placeholder": "AWS Profile",
          "required": false
        },
        {
          "name": "region",
          "type": "text",
          "placeholder": "AWS Region",
          "required": false
        }
      ],
      "icon": "EC2.png"
    },
    {
      "name": "search-instance-price",
      "title": "Search Instance Types",
      "description": "Find and compare prices across EC2, RDS, and ElastiCache instance types.",
      "mode": "view",
      "arguments": [
        {
          "name": "instanceType",
          "type": "text",
          "placeholder": "Instance Type",
          "required": false
        },
        {
          "name": "service",
          "type": "dropdown",
          "data": [
            {
              "title": "EC2",
              "value": "EC2"
            },
            {
              "title": "RDS (Aurora MySQL)",
              "value": "RDS (Aurora MySQL)"
            },
            {
              "title": "RDS (Aurora PostgreSQL)",
              "value": "RDS (Aurora PostgreSQL)"
            },
            {
              "title": "RDS (MySQL)",
              "value": "RDS (MySQL)"
            },
            {
              "title": "RDS (PostgreSQL)",
              "value": "RDS (PostgreSQL)"
            },
            {
              "title": "RDS (MariaDB)",
              "value": "RDS (MariaDB)"
            },
            {
              "title": "RDS (Oracle)",
              "value": "RDS (Oracle)"
            },
            {
              "title": "RDS (SQL Server)",
              "value": "RDS (SQL Server)"
            },
            {
              "title": "Elasticache (Redis)",
              "value": "Elasticache (Redis)"
            }
          ],
          "placeholder": "AWS Service",
          "required": false,
          "default": "EC2"
        },
        {
          "name": "region",
          "type": "text",
          "placeholder": "AWS Region",
          "required": false
        }
      ],
      "icon": "AWS.png"
    }
  ],
  "preferences": [
    {
      "name": "awsProfile",
      "title": "AWS Profile",
      "description": "The AWS profile to use to fetch instance data.",
      "type": "textfield",
      "required": true,
      "default": "default"
    },
    {
      "name": "defaultRegion",
      "title": "AWS Region",
      "description": "The default AWS region to use.",
      "type": "textfield",
      "required": true,
      "default": "eu-west-1"
    },
    {
      "name": "defaultTerminal",
      "title": "Default Terminal",
      "type": "appPicker",
      "required": true,
      "description": "The default terminal to use for SSH connections."
    }
  ],
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.654.0",
    "@aws-sdk/client-pricing": "^3.654.0",
    "@aws-sdk/credential-providers": "^3.654.0",
    "@aws-sdk/shared-ini-file-loader": "^3.374.0",
    "@raycast/api": "^1.83.1",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "react-devtools": "^5.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "prepare": "husky install",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
